{
  "name": "Polkadot Smnart Contract Development",
  "image": "polkadot-smartcontract:debug",
  "workspaceMount": "source=${localWorkspaceFolder},target=/project,type=bind",
  "workspaceFolder": "/project",
  "containerEnv": {
    "WORKSPACE_DIR": "/workspace",
    "PROJECT_DIR": "/project"
  },
  "postCreateCommand": "sudo chown -R $USER:$USER /home/$USER/.npm && bash -c 'devtools setup-devcontainer'",
  "postAttachCommand": "bash -c 'devtools setup-keypair'",
  "customizations": {
    "vscode": {
      "extensions": [
        "NomicFoundation.hardhat-solidity",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "solidity.formatter": "prettier"
      }
    }
  }
}
